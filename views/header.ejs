<!DOCTYPE html>
<html lang="ko-KR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title></title>
    <link rel="stylesheet" href="/my_reset.css" />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="wrap">
      <header class="hd mw">
        <h1>
          <a href="/"><img src="/nwjns.svg" alt="" /></a>
        </h1>
        <nav>
          <a href="/write">WRITE</a>
          <% if(user){ %>
          <a href="/mypage"><%= user.username %> , WELCOME!</a>
          <a href="/logout">LOGOUT</a>
          <% } else {%>
          <a href="/login">LOGIN</a>
          <a href="/signup">SIGNUP</a>
          <% } %>
        </nav>
        <div class="darkmode">
          <span><i class="fa-regular fa-sun"></i></span>
          <span><i class="fa-regular fa-moon"></i></span>
        </div>
        <div class="ham"><i class="fa-solid fa-bars"></i></div>
      </header>
    </div>

    <script>
      const hamBtn = document.querySelector(".ham");
      const header = document.querySelector(".hd");
      const mode = document.querySelector(".darkmode");

      hamBtn.addEventListener("click", () => {
        header.classList.toggle("on");
      });

      const modeStatus = localStorage.getItem("mode");
      if (modeStatus === "on") {
        document.body.classList.add("dark");
        mode.classList.add("on");
      }

      mode.addEventListener("click", (e) => {
        mode.classList.toggle("on");
        //or e.target.classlist.toggle(on)
        document.body.classList.toggle("dark");

        if (document.body.classList.contains("dark")) {
          localStorage.setItem("mode", "on");
        } else {
          localStorage.setItem("mode", "off");
        }
      });
    </script>
  </body>
</html>
